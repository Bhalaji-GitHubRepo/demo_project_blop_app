<%= simple_form_for([@blog, @blog.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, required: true, placeholder: "Type your comments here..." %>
    </div>
  </div>
  <%= f.button :submit, 'Post comment', class: "btn btn-primary mb-3" %>
<% end %>